{
  "manifest_version": 3,
  "name": "BoldTake Professional",
  "version": "3.8.0",
  "description": "Rock-solid AI automation for X.com with network recovery and URL preservation",
  
  "action": {
    "default_title": "BoldTake Professional",
    "default_popup": "popup.html"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://*.supabase.co/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": [
        "supabase.min.js",
        "supabase-config.js",
        "auth.js",
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["supabase.min.js", "supabase-config.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  
  "icons": {
    "128": "icon.png"
  }
}
